<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');
    /* @import url('https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css'); */


    body {
        font-family: 'Poppins', sans-serif;
        margin: 20px;
    }

    i:hover {
        cursor: pointer;
    }

    table {
        border: 3px solid rgb(0, 82, 106);
        width: 100%;
        height: 100%;
    }

    tr {
        background-color: rgb(203, 248, 255);
    }

    th {
        background-color: rgb(249, 171, 171);
    }

    td,
    th {
        text-align: center;
        border: 3px solid black;
    }

</style>

<body>
    <h1 class="he">Welcome to Admin Database</h1>

    <form action="/find" method="post" style="margin: 30px;">
        <input type="text" value="<%= currStr %>" name="search_query" style="display: flex; justify-content: center;">
        <input type="submit" value="Search">
    </form>




    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Application ID</th>
                <th>Application Date</th>
                <th>First Name</th>

                <th>Contact Number</th>
                <th>Address</th>
                <th>Email</th>
                <th>Gender</th>
                <th>View Details</th>

            </tr>

            <% for(let i=0; i<data.length; i++) { %>
                <tr>
                    <th scope="row">
                        <%= data[i].id %>
                    </th>
                    <td>
                        <%= data[i].created_at.toString().substring(0, 25) %>
                    </td>
                    <td>
                        <%= data[i].first_name %>
                            <%= data[i].last_name %>
                    </td>
                    <td>
                        <%= data[i].contact_no %>
                    </td>
                    <td>
                        <%= data[i].address.substring(0, 30) %>...
                    </td>
                    <td>
                        <%= data[i].email %>
                    </td>
                    <td>
                        <%= data[i].gender %>
                    </td>
                    <td><a href="/dataDetails/<%= data[i].id %>">view<i class="bi bi-eye-fill"></i></a></td>
                </tr>
                <% } %>


        </tbody>
    </table>
</body>

</html>